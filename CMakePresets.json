{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 2,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "msvc-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "gcc-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "clang-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "debug-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "msvc-debug",
            "inherits": [
                "base",
                "msvc-base",
                "debug-base"
            ]
        },
        {
            "name": "msvc-release",
            "inherits": [
                "base",
                "msvc-base",
                "release-base"
            ]
        },
        {
            "name": "gcc-debug",
            "inherits": [
                "base",
                "gcc-base",
                "debug-base"
            ]
        },
        {
            "name": "gcc-release",
            "inherits": [
                "base",
                "gcc-base",
                "release-base"
            ]
        },
        {
            "name": "clang-debug",
            "inherits": [
                "base",
                "clang-base",
                "debug-base"
            ]
        },
        {
            "name": "clang-release",
            "inherits": [
                "base",
                "clang-base",
                "release-base"
            ]
        }
    ]
}
